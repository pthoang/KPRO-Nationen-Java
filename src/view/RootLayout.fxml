<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane minHeight="600.0" minWidth="800.0" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RootController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Fil">
               <items>
               	  <MenuItem mnemonicParsing="false" onAction="#showNewAndEmpty" text="Ny tom liste" />
                  <MenuItem mnemonicParsing="false" onAction="#showLoadList" text="Last inn liste" />
                  <MenuItem mnemonicParsing="false" onAction="#showLoadSources" text="Last inn kilder" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Hjelp">
            <items>
              <MenuItem fx:id="aboutItem" mnemonicParsing="false" onAction="#showAbout" text="Om" />
              <MenuItem fx:id="settingsItem" mnemonicParsing="false" onAction="#showSettings" text="Innstillinger" />
                  <MenuItem fx:id="showUserManual" mnemonicParsing="false" text="Brukermanual" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
