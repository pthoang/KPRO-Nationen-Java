<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane minHeight="600.0" minWidth="800.0" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RootController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Fil">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#showNewAndEmpty" text="Ny tom liste" />
                        <MenuItem mnemonicParsing="false" onAction="#showLoadList" text="Last inn liste" />
                        <MenuItem mnemonicParsing="false" onAction="#showAddJury" text="Administrer Jury" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Hjelp">
                    <items>
                        <MenuItem fx:id="settingsItem" mnemonicParsing="false" onAction="#showSettings" text="Innstillinger" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
