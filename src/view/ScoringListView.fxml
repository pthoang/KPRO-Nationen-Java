<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ScoringListController">
   <children>
       <TableView fx:id="candidateTable" GridPane.columnIndex="0" GridPane.rowIndex="0">
		   <columns>
			   <TableColumn fx:id="rankColumn" text="Rangering" />
			   <TableColumn fx:id="lastNameColumn" text="Etternavn" />
			   <TableColumn fx:id="firstNameColumn" text="Fornavn" />
		   </columns>
	   </TableView>

	   <ImageView fx:id="image" GridPane.rowSpan="3" GridPane.rowIndex="0" GridPane.columnIndex="2" pickOnBounds="true" preserveRatio="true" />

	   <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
	   <TextField fx:id="previousYearRankField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
	   <TextField fx:id="rankField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

	   <Label maxWidth="200" GridPane.rowIndex="7" GridPane.columnIndex="0" text="Beskrivelse:" />
	   <TextArea fx:id="descriptionField" maxHeight="200" GridPane.columnSpan="3" GridPane.rowIndex="8" GridPane.columnIndex="0" />

	   <TextField fx:id="municipalityField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
	   <TextField fx:id="animalsPGField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
	   <TextField fx:id="hiredHelpPGField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
	   <TextField fx:id="farmingPGField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

	   <Label maxWidth="200" GridPane.rowIndex="3" GridPane.columnIndex="2" text="Nettverk:" />
	   <ListView fx:id="networkList" maxHeight="200" GridPane.rowSpan="3" GridPane.rowIndex="4" GridPane.columnIndex="2"  />

	   <Label maxWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="0" text="Navn"/>
	   <Label maxWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="0" text="Fjorårets rangering"/>
	   <Label maxWidth="200" GridPane.rowIndex="2" GridPane.columnIndex="0" text="Årets rangering"/>

	   <Label maxWidth="200" GridPane.rowIndex="3" GridPane.columnIndex="0"  text="Kommune"/>
	   <Label maxWidth="200" GridPane.rowIndex="4" GridPane.columnIndex="0"  text="Dyr"/>
	   <Label maxWidth="200" GridPane.rowIndex="5" GridPane.columnIndex="0"  text="Avløser"/>
	   <Label maxWidth="200" GridPane.rowIndex="6" GridPane.columnIndex="0"  text="Jordbruk"/>

	   <ToolBar GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2">
		   <items>
			   <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" text="Slett kandidat" />
			   <Button fx:id="saveCandidateButton" mnemonicParsing="false" onAction="#handleSaveChangesToCandidate" text="Lagre kandidat" />
			   <Button fx:id="newCandidateButton" mnemonicParsing="false" onAction="#handleNewCandidate" text="Ny kandidat" />
			   <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Tilbake" />
			   <Button fx:id="saveListButton" mnemonicParsing="false" onAction="#handleSaveList" text="Lagre" />
		   </items>
	   </ToolBar>

   </children>
	<columnConstraints>
		<ColumnConstraints percentWidth="20" hgrow="SOMETIMES" halignment="CENTER" />
		<ColumnConstraints percentWidth="40" hgrow="SOMETIMES" halignment="CENTER" />
		<ColumnConstraints percentWidth="40" hgrow="SOMETIMES" halignment="CENTER" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints vgrow="SOMETIMES" valignment="CENTER" />
		<RowConstraints vgrow="SOMETIMES" valignment="CENTER" />
		<RowConstraints vgrow="SOMETIMES" valignment="CENTER" />
		<RowConstraints vgrow="SOMETIMES" valignment="CENTER" />
		<RowConstraints vgrow="SOMETIMES" valignment="CENTER" />
		<RowConstraints vgrow="SOMETIMES" valignment="CENTER" />
		<RowConstraints vgrow="SOMETIMES" valignment="CENTER" />
		<RowConstraints vgrow="SOMETIMES" valignment="CENTER" />
		<RowConstraints vgrow="SOMETIMES" valignment="CENTER" />
	</rowConstraints>
</GridPane>
